# ==============================================================================
# General Settings
# ==============================================================================
# Timezone
TZ=UTC

# Compose project name
COMPOSE_PROJECT_NAME=angie

# ==============================================================================
# Auto-Setup (GeoIP, DH params)
# ==============================================================================
# Auto-download GeoIP database if missing (true/false)
AUTO_DOWNLOAD_GEOIP=true

# Auto-update GeoIP if older than X days (true/false)
AUTO_UPDATE_GEOIP=false
GEOIP_MAX_AGE_DAYS=30

# ==============================================================================
# Let's Encrypt / ACME
# ==============================================================================
# E-mail администратора для регистрации в Let's Encrypt
LETSENCRYPT_EMAIL=admin@example.com

# Список доменов через пробел (первый = базовый CN)
# LETSENCRYPT_DOMAINS=example.com www.example.com

# 1 = staging (тестовые сертификаты, без лимитов); 0 = production
LETSENCRYPT_STAGING=0

# Размер RSA ключа
RSA_KEY_SIZE=4096

# ==============================================================================
# Keycloak OIDC Configuration
# ==============================================================================
# URL Keycloak сервера (без trailing slash)
KEYCLOAK_URL=https://login.example.com

# Realm в Keycloak
KEYCLOAK_REALM=master

# Client ID (создать в Keycloak как confidential client)
KEYCLOAK_CLIENT_ID=your-client-id

# Client Secret (из настроек клиента в Keycloak)
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# URL для редиректа после аутентификации
KEYCLOAK_REDIRECT_URI=https://your-domain.com/oauth2/callback

# Cookie settings
KEYCLOAK_COOKIE_SECRET=generate-random-32-char-string!!
KEYCLOAK_COOKIE_NAME=_oauth2_proxy
